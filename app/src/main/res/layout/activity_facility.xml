<?xml version="1.0" encoding="utf-8"?>
<!-- Gerong and Lechico -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_picture" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_profile_image"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turnoy K. Legazpi"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/notification_button"
                android:layout_width="39dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:background="@null"
                android:src="@drawable/notifications_button" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Type here to search..."
                android:background="@drawable/edittext_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search_button"
                android:background="@null"
                android:contentDescription="Search" />
        </LinearLayout>

        <!-- Facilities List -->
        <TextView
            android:id="@+id/available_facilities_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Available Facilities"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/facility_apc_court"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/facility_background"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/apc_court" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

            </LinearLayout>

            <TextView
                android:id="@+id/apc_court_text"
                android:layout_width="175dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:text="Spacious, well-maintained basketball court with a smooth wooden floor, standard hoop, and ample viewing area located at the 11th Floor."
                android:textAlignment="viewStart"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facility_auditorium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/facility_background"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/auditorium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
            </LinearLayout>

            <TextView
                android:id="@+id/auditorium_text"
                android:layout_width="175dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="A large and well-equipped auditorium with a stage and a sound system suitable for a variety of events located at the 12th FLoor."
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facility_cafeteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/facility_background"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cafeteria" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
            </LinearLayout>

            <TextView
                android:id="@+id/cafeteria_text"
                android:layout_width="175dp"
                android:layout_height="82dp"
                android:layout_weight="1"
                android:text="Spacious cafeteria with ample seating and a relaxed atmosphere, ideal for group lunches and casual meetings located at the Ground Floor"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facility_mph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/facility_background"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mph_one" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
            </LinearLayout>

            <TextView
                android:id="@+id/MPH1_text"
                android:layout_width="175dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:text="A large room designed for special conferences and events for students and teachers alike to operate located at the Ground Floor."
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
